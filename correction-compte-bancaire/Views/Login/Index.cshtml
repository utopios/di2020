<form asp-action="SubmitLogin" asp-controller="Login" method="post" class="container">
    @if (ViewBag.Message != null)
    {
        <div class="row m-1 justify-content-center">
            <div class="alert alert-danger col-6 p-1">
                @ViewBag.Message
            </div>
        </div>
    }
    <div class="row m-1 justify-content-center">
        <input type="text" name="login" placeholder="Votre login" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <input type="password" name="password" placeholder="Votre mot de passe" class="form-control col-6 p-1" />
    </div>
    <div class="row m-1 justify-content-center">
        <button class="col-6 btn btn-default p-1" type="submit">Se connecter</button>
    </div>
</form>